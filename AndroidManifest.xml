<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.controlefinanceiro"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PrincipalView"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_principal" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:label="@string/new_account" 
		          android:name=".NovaContaView"
		          android:screenOrientation="portrait"
			      android:configChanges="keyboard|keyboardHidden|orientation" />
        
		<activity android:label="@string/enter" 
		          android:name=".EntrarView"
		          android:screenOrientation="portrait"
			      android:configChanges="keyboard|keyboardHidden|orientation" />
        
		<activity android:label="@string/financial_control" 
		          android:name=".ControleFinanceiroView"
		          android:screenOrientation="portrait"
			      android:configChanges="keyboard|keyboardHidden|orientation" />
        
		<activity android:label="@string/new_category" 
		          android:name=".CategoriaView"
		          android:screenOrientation="portrait"
			      android:configChanges="keyboard|keyboardHidden|orientation" />
    </application>

</manifest>